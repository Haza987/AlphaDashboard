@* 
    Github Copilot helped me with the abillity to use this across multiple sign in areas
    This is done through @ViewBag.FormAction with this being set in the controller
*@

@model SignInViewModel

<div class="signin-container">
    <h1>@ViewBag.Title</h1>

    <div class="google-signin">
        <img src="~/images/google-icon.svg" alt="google logo">
        <partial name="AuthPartials/_ExternalAuthentication" />
    </div>

    <p class="or">OR</p>

    <div class="form-signin">
        <form asp-action="@ViewBag.FormAction" method="post">
            <div class="email-container">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="email" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="user-error text-danger"></span>
            </div>

            <div class="password-container">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="password" type="password" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="user-error text-danger"></span>
            </div>

            <div class="bottom-container">
                <input asp-for="RememberMe" type="checkbox" name="RememberMe" />
                <label asp-for="RememberMe" class="custom-checkbox">Remember Me</label>
                <span asp-validation-for="RememberMe" class="text-danger"></span>
                <a class="forgotten-password" href="#">Forgot Password?</a>
            </div>

            <button type="submit" class="btn btn--signin">Sign In</button>
        </form>

        <div class="no-account">
            <p>Don't have an account?</p>
            <a asp-action="SignUp">Create Account</a>
        </div>
    </div>
</div>
