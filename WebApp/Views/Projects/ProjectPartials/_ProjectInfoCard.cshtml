@model ProjectUpdateDto

<div class="over-box">
    <div class="over-box-content">
        <div class="project-info-card-top">
            <h2 id="project-id-custom"></h2>
            <i class="fa-solid fa-times close" id="close-button"></i>
        </div>

        @* <div class="project-info-card-image">             *@
        @*     <img src="Images/project greenyellow.svg" alt="project image"> *@
        @* </div> *@

        <form class="project-info-card-form" asp-action="UpdateProjectStatus" method="post">

            <input id="project-id-input" name="id" type="hidden" />

            <div class="name-container">            
                <h4>Project Name</h4>
                <p id="project-name"></p> 
            </div>

            <div class="client-container">
                <h4>Client Name</h4>
                <p id="project-client"></p>
            </div>

            <div class="description-container">
                <h4>Description</h4>
                <p id="project-description"></p>
            </div>

            <div class="date-container">
                <div class="project-start">
                    <h4>Start Date</h4>
                    <p id ="project-start"></p>
                </div>

                <div class="project-end">
                    <h4>End Date</h4>
                    <p id="project-end"></p>
                </div>
            </div>

            <div id="selected-members-info" class="selected-members">
                <h4>Project Members</h4>
                <div class="selected-members-container">

                </div>
            </div>

            <div class="budget-container">
            <h4>Budget</h4>
                <div class="span-container">
                    <span class="prefix">$</span>
                    <p id="project-budget"></p>
                </div>
            </div>

            <div class="project-info-card-bottom">
                <input id="is-completed-input" name="IsCompleted" type="hidden" />
                <button class="btn btn--completed" type="submit" onclick="setIsCompleted(true)">Completed</button>
                <button class="btn btn--not-completed" type="submit" onclick="setIsCompleted(false)">Not Completed</button>
            </div>
        </form>
    </div>
</div>
