@model MemberDto

<div class="delete-container">

    <button class="btn-close"><i class="fa-solid fa-times close" id="close-button"></i></button>
    <div class="delete-top">
        <h2>Delete Member</h2>
    </div>

    <div class="delete-info">
        <img src="" alt="member image">
        <h2 id="member-name">@Model.FirstName @Model.LastName</h2>

        <input type="hidden" name="id" value="" />

        <div class="delete-bottom">
            <p>Are you sure you want to delete this member?</p>
            <div class="delete-btns">
                <button class="btn btn--delete" onclick="confirmDelete()">Delete</button>
                <button class="btn btn--cancel" id="btn-cancel">Cancel</button>
            </div>
        </div>
    </div>
</div>
